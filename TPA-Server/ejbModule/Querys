--Codigo y Cantidad pedida por SolicitudArticulo
select art.codArticulo, itsa.cantidad from SolicitudArticulo sa
join ItemSolicitudArticulo itsa on sa.idSolicitudArticulo = itsa.idSolicitudArticulo
join Articulo art on itsa.idArticulo = art.id
where sa.codigo = 'C34L0950'


